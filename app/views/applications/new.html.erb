<h1>New Application for <%= @event.name %></h1>

<%= form_for :application, url: new_event_application_path(params[:event_id]) do |f| %>

 
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>


  <p>
    <%= f.label :answer_1 %><br>
    <%= f.text_field :answer_1 %>
  </p>

  <p>
    <%= f.label :answer_2 %><br>
    <%= f.text_field :answer_2 %>
  </p>

  <p>
    <%= f.label :answer_3 %><br>
    <%= f.text_field :answer_3 %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', event_path(params[:event_id]) %>